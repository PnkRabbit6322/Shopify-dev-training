{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  .collage {
    display: grid;
  }

  .card-wrapper.product-card-wrapper {
    height: fit-content;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }

    .collage {
      grid-template-columns: repeat({{ section.settings.column_amount_desktop }}, minmax(0, 1fr));
      gap: {{ section.settings.block_spacing_desktop }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .collage {
      gap: {{ section.settings.block_spacing_mobile }}px;
    }

    .collage--mobile {
      grid-template-columns: repeat({{ section.settings.column_amount_mobile }}, minmax(0, 1fr));
    }
  }

  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {% when 'image' %}
        div.collage__item--image-{{ forloop.index }} {
          grid-column: span {{ block.settings.image_size_col }} ;
          grid-row: span {{ block.settings.image_size_row }} ;
        }
      {% when 'product' %}
        div.collage__item--product-{{ forloop.index }} {
          grid-column: span {{ block.settings.product_size_col }} ;
          grid-row: span {{ block.settings.product_size_row }} ;
        }
      {% when 'collection' %}
        div.collage__item--collection-{{ forloop.index }} {
          grid-column: span {{ block.settings.collection_size_col }} ;
          grid-row: span {{ block.settings.collection_size_row }} ;
        }
      {% when 'video' %}
        div.collage__item--video-{{ forloop.index }} {
          grid-column: span {{ block.settings.video_size_col }} ;
          grid-row: span {{ block.settings.video_size_row }} ;
        }
    {%- endcase -%}
  {%- endfor -%}
{%- endstyle -%}

